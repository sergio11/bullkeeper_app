<resources>

    <!-- AppCompat No Action Bar Full Screen -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="colorPrimary">@color/cyanBrilliant</item>
        <item name="colorPrimaryDark">@color/darkModerateBlue</item>
        <item name="colorAccent">@color/softOrange</item>
    </style>

    <!-- The launcher theme. -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- App Intro Theme -->
    <style name="AppTheme.Intro">
        <item name="android:windowBackground">@drawable/intro_background_cyan</item>
    </style>

    <!-- The Crash Error Theme. -->
    <style name="AppTheme.Crash">
        <item name="android:windowBackground">@drawable/intro_background_cyan</item>
    </style>

    <!-- User Profile Theme. -->
    <style name="AppTheme.UserProfile">
        <item name="android:windowBackground">@drawable/intro_background_cyan</item>
    </style>

    <!-- User Kids Profile Theme. -->
    <style name="AppTheme.MyKidsProfile">
        <item name="android:windowBackground">@drawable/intro_background_cyan</item>
    </style>


    <!-- User Preferences Theme -->
    <style name="AppTheme.Preferences">
        <item name="preferenceTheme">@style/UserPreferenceTheme</item>
        <item name="android:windowBackground">@drawable/intro_background_cyan</item>
    </style>

    <!-- Questions -->
    <style name="AppTheme.Questions">
        <item name="android:windowBackground">@drawable/intro_background_cyan</item>
    </style>

    <!-- Comments Theme. -->
    <style name="AppTheme.Comments">
        <item name="android:windowBackground">@drawable/intro_background_cyan</item>
    </style>

    <!-- Comments Detail Theme. -->
    <style name="AppTheme.CommentDetail">
        <item name="android:windowBackground">@drawable/intro_background_cyan</item>
    </style>


    <style name="AppTheme.Widget"/>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/HelveticaNeueLTStd-Roman.otf</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.TextViewHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/header_margin</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="AppTheme.TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/header_margin</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Common Action button Style -->
    <style name="CommonActionButton" parent="@style/AppTheme.Button">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/common_btn_text_color</item>
        <item name="fontPath">fonts/VAGRoundedBT.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/common_strong_text_size</item>
        <item name="android:background">@drawable/common_action_button_state</item>
    </style>

    <style name="CommonActionButton.Inverse" parent="@style/CommonActionButton">
        <item name="android:textColor">@color/common_btn_text_color_inverse</item>
        <item name="android:background">@drawable/common_action_button_state_inverse</item>
    </style>
    
    <style name="CommonTitle">
        <item name="android:textColor">@color/commonWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="fontPath">fonts/VAGRoundedBT.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">@dimen/common_title_text_size</item>
    </style>

    <!-- Common Strong Text -->
    <style name="CommonStrongText">
        <item name="fontPath">fonts/VAGRoundedBT.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/common_strong_text_size</item>
    </style>

    <!-- Common Strong Medium Text -->
    <style name="CommonStrongText.Medium">
        <item name="android:textSize">@dimen/common_strong_medium_text_size</item>
    </style>

    <!-- Common Strong Small Text -->
    <style name="CommonStrongText.Small">
        <item name="android:textSize">@dimen/common_strong_small_text_size</item>
    </style>

    <!-- Common Strong Text All Caps -->
    <style name="CommonStrongText.AllCaps">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Common Toolbar Button Icon -->
    <style name="CommonToolbarButtonIcon">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <!-- App Social Icon -->
    <style name="AppSocialIcon">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Common Section -->
    <style name="CommonSection">
        <item name="android:weightSum">1</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@drawable/common_section_translucent_background</item>
    </style>


    <!-- Text Styles -->

    <style name="TextStyles.TextFloatLabelAppearance"
            parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/commonWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyles.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TextAppearance.Design.Counter.Intro">
        <item name="android:textColor">@color/cyanBrilliant</item>
        <item name="android:textColorHighlight">@color/darkModerateCyan</item>
        <item name="android:textColorHint">@color/darkModerateCyan</item>
    </style>

    <!-- Text Input Layout Appearance -->
    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Counter.Intro</item>
        <item name="errorTextAppearance">@style/TextStyles.TextErrorAppearance</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>
    </style>

    <style name="CommonTextInputLayout"
            parent="Widget.Design.TextInputLayout">

        <item name="android:textSize">20sp</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter.Intro</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/commonWhite</item>
        <!-- Control color on normal state -->
        <item name="colorControlNormal">@color/commonWhite</item>
        <!-- Control colo on activated state -->
        <item name="colorControlActivated">@color/commonWhite</item>
        <item name="android:textColorPrimary">@color/commonWhite</item>
    </style>

    <!-- End Text Styles -->

    <style name="CommonDatePickerStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/darkModerateBlue</item>
    </style>


    <!-- Menu Theme -->
    <style name="CommonDialogFragmentTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CommonDialogWindow.Window</item>
        <item name="android:background">@color/translucentWhite</item>
    </style>

    <style name="CommonDialogWindow.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>



    <!-- User Preferences Theme -->
    <style name="UserPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/UserPreferenceFragmentCompatStyle</item>
        <item name="android:textColor">@color/darkModerateBlue</item>
        <item name="android:textColorSecondary">@color/commonWhite</item>
        <item name="colorAccent">@color/commonWhite</item>
    </style>

    <!-- User Preference Fragment CompatStyle -->
    <style name="UserPreferenceFragmentCompatStyle"
        parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/fragment_user_settings</item>
    </style>


    <style name="PreferenceDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/darkModerateBlue</item>
        <item name="colorSwitchThumbNormal">@color/cyanBrilliant</item>
    </style>

    <style name="BrandedSwitch.text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/commonWhite</item>
        <item name="android:textSize">@dimen/common_switch_text_size</item>
    </style>

    <style name="CommonSwitch">
        <item name="colorControlActivated">@color/darkModerateBlue</item>
        <item name="colorSwitchThumbNormal">@color/commonWhite</item>
    </style>

    <style name="CommonSwitch.Text">
        <item name="android:textColor">@color/commonWhite</item>
        <item name="android:textSize">@dimen/common_switch_text_size</item>
    </style>

</resources>
