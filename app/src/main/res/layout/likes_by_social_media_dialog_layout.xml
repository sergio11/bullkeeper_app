<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_margin"
            android:gravity="center">

            <!-- Likes Social Media Image -->
            <ImageView
                android:id="@+id/likesSocialMediaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_not_be_loaded" />

            <!-- Likes Social Media Title -->
            <TextView
                android:id="@+id/likesSocialMediaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CommonStrongText"
                android:text="-"
                android:textStyle="bold" />

        </LinearLayout>


        <View
            android:id="@+id/separator"
            android:layout_width="@dimen/common_divider_small"
            android:layout_height="@dimen/common_divider_height"/>

        <!-- Content Detail Text -->
        <TextView
            android:id="@+id/contentDetailText"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/common_margin"
            android:padding="@dimen/common_padding"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            style="@style/CommonStrongText.Big"/>

        <!-- Close Dialog -->
        <Button
            android:id="@+id/closeDialog"
            style="@style/DimensionActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/commonWhite"
            android:padding="@dimen/common_padding"
            android:text="@string/close_dialog" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>