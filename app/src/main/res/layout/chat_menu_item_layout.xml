<?xml version="1.0" encoding="utf-8"?>
<!-- Chats -->
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="60dp"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/chatAction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/menu_item_chat"
            android:background="@drawable/common_action_menu_item_state"
            android:src="@drawable/chat_menu_cyan"/>

        <TextView
            android:id="@+id/messageCount"
            android:layout_width="22dp"
            android:layout_height="22dp"
            style="@style/CommonStrongText.Small"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/commonWhite"
            android:background="@drawable/background_alert_count_danger"
            android:layout_gravity="end"/>

    </FrameLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        style="@style/CommonStrongText.Small"
        android:textColor="@color/commonWhite"
        android:text="@string/menu_item_chat"/>

</LinearLayout>