<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_very_high"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_list_item_state">

        <FrameLayout
            android:id="@+id/geofenceAlertImageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@color/darkModerateBlue">

            <!-- Geofence Alert Type -->
            <ImageView
                android:id="@+id/geofenceAlertType"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/content_not_be_loaded"
                android:layout_gravity="center"/>

        </FrameLayout>

        <!-- Separator -->
        <View
            android:id="@+id/separator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/commonWhite"
            android:layout_toEndOf="@id/geofenceAlertImageContainer"/>

        <!-- Geofence Alert Title -->
        <TextView
            android:id="@+id/geofenceAlertTitle"
            style="@style/CommonStrongText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/separator"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/darkModerateBlue"
            android:textStyle="italic" />


        <!-- Geofence Alert Description -->
        <TextView
            android:id="@+id/geofenceAlertDescription"
            style="@style/CommonStrongText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/geofenceAlertTitle"
            android:layout_toEndOf="@id/separator"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/darkModerateBlue"
            android:textStyle="italic" />

        <!-- Geofence Alert Date -->
        <TextView
            android:id="@+id/geofenceAlertDate"
            style="@style/CommonStrongText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/darkModerateBlue"
            android:textStyle="italic" />

    </RelativeLayout>

</FrameLayout>


