<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_foreground"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_very_high"
    android:background="@drawable/common_list_item_state"
    android:orientation="vertical">

    <!-- SMS Image Container -->
    <FrameLayout
        android:id="@+id/smsImageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="@color/darkModerateBlue">


        <!-- Sms Folder Icon  -->
        <ImageView
            android:id="@+id/smsFolderIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/content_not_be_loaded"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Separator -->
    <View
        android:id="@+id/separator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/commonWhite"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/smsImageContainer"/>

    <!-- Address -->
    <TextView
        android:id="@+id/addressText"
        style="@style/CommonStrongText.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/separator"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:gravity="start|center_vertical"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@color/darkModerateBlue"
        android:textStyle="italic" />

    <!-- Sms Date -->
    <TextView
        android:id="@+id/smsDate"
        style="@style/CommonStrongText.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/separator"
        android:layout_below="@id/addressText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:gravity="start|center_vertical"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/darkModerateBlue"
        android:textStyle="italic" />


    <!-- Sms Read State -->
    <TextView
        android:id="@+id/smsReadState"
        style="@style/CommonStrongText.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/separator"
        android:layout_below="@id/smsDate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:gravity="start|center_vertical"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/darkModerateBlue"
        android:textStyle="italic" />


</RelativeLayout>

