<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.fragment.charts.dimensions.FourDimensionsMvpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CommonStrongText"
                    android:textColor="@color/cyanBrilliant"
                    android:textStyle="bold"
                    android:text="@string/kid_detail_dimensions_title"/>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CommonStrongText.Medium"
                    android:textColor="@color/cyanBrilliant"
                    android:text="@string/kid_detail_dimensions_description"/>

                <View
                    android:layout_width="@dimen/common_divider_small"
                    android:layout_height="@dimen/common_divider_height"
                    android:layout_margin="10dp"
                    android:background="@color/cyanBrilliant"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_margin"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:layout_marginTop="10dp">

            <!-- Chart Data Container -->
            <RelativeLayout
                android:id="@+id/chartDataContainer"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Chart Title -->
                <TextView
                    android:id="@+id/chartTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CommonStrongText"
                    android:textColor="@color/cyanBrilliant"
                    android:textStyle="bold"
                    android:text="@string/results_since_one_month_ago" />

                <!-- Four Dimensions Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_margin="@dimen/common_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/chartTitle"/>

            </RelativeLayout>

            <!-- No Results Found -->
            <LinearLayout
                android:id="@+id/noResultsFound"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/chart_bar_solid_cyan"
                    android:contentDescription="@string/content_not_be_loaded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cyanBrilliant"
                    android:singleLine="true"
                    android:text="@string/kid_results_no_results_found"
                    style="@style/CommonStrongText.Big"
                    android:textAlignment="center"/>


            </LinearLayout>

            <!-- Loading Results -->
            <LinearLayout
                android:id="@+id/loadingResults"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <sanchez.sanchez.sergio.bullkeeper.core.ui.components.SupportLoadingSpinner
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/child_cyan"
                    android:contentDescription="@string/content_not_be_loaded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cyanBrilliant"
                    android:singleLine="true"
                    android:text="@string/kid_results_loading_results"
                    style="@style/CommonStrongText.Medium"
                    android:textAlignment="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>