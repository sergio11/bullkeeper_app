<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_very_high"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <!-- Background -->
    <RelativeLayout
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_list_item_background">

        <!-- Delete Kid Request -->
        <ImageView
            android:id="@+id/deleteKidRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/trash_white"
            android:contentDescription="@string/content_not_be_loaded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/deleteKidRequest"
            android:textAllCaps="true"
            android:text="@string/delete_list_menu_item"
            android:textColor="@color/commonWhite"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_foreground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_very_high"
        android:background="@drawable/common_list_item_state"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/kidRequestImageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@color/darkModerateBlue">


            <!-- Kid Request Type  -->
            <ImageView
                android:id="@+id/kidRequestType"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/content_not_be_loaded"
                android:layout_gravity="center"/>

        </FrameLayout>

        <!-- Separator -->
        <View
            android:id="@+id/separator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/commonWhite"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/kidRequestImageContainer"/>

        <!-- Kid Request Type Name -->
        <TextView
            android:id="@+id/kidRequestTypeName"
            style="@style/CommonStrongText.Big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/separator"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/darkModerateBlue"
            android:textStyle="italic" />

        <!-- Kid Request Since -->
        <TextView
            android:id="@+id/kidRequestSince"
            style="@style/CommonStrongText.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/separator"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/kidRequestTypeName"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:gravity="start|center_vertical"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="@color/darkModerateBlue"
            android:textStyle="italic" />

    </RelativeLayout>

</FrameLayout>