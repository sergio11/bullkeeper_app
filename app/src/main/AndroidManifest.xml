<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sanchez.sanchez.sergio.masom_app">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Intro Activity -->
        <activity
            android:name=".ui.activity.intro.IntroActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Intro" />

        <!-- Custom Splash Screen Activity -->
        <activity
            android:name=".ui.activity.splash.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="cat.ereza.customactivityoncrash.RESTART" />
            </intent-filter>
        </activity>

        <!-- Crash Error Activity -->
        <activity
            android:name=".ui.activity.CrashErrorActivity"
            android:label="@string/app_name"
            android:process=":error_activity"
            android:theme="@style/AppTheme.Crash">
            <intent-filter>
                <action android:name="cat.ereza.customactivityoncrash.ERROR" />
            </intent-filter>
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".ui.activity.home.HomeActivity"
            android:label="@string/title_activity_home" />

        <!-- My Kids Activity -->
        <activity
            android:name=".ui.activity.mykids.MyKidsActivity"
            android:label="@string/title_activity_my_kids"
            android:screenOrientation="portrait" />

        <!-- Alert Detail Activity -->
        <activity
            android:name=".ui.activity.alertdetail.AlertDetailActivity"
            android:label="@string/title_activity_alert_detail"
            android:screenOrientation="portrait" />

        <!-- Alert List Activity -->
        <activity
            android:name=".ui.activity.alertlist.AlertListActivity"
            android:label="@string/title_activity_alert_list"
            android:screenOrientation="portrait" />

        <!-- App Tutorial Activity -->
        <activity
            android:name=".ui.activity.tutorial.AppTutorialActivity"
            android:label="@string/title_activity_app_tutorial"
            android:screenOrientation="portrait" />

        <!-- User Settings Activity -->
        <activity
            android:name=".ui.activity.settings.UserSettingsActivity"
            android:label="@string/title_activity_user_settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Preferences" />

        <!-- User Profile -->
        <activity
            android:name=".ui.activity.userprofile.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.UserProfile" />

        <!-- My Kids Profile -->
        <activity
            android:name=".ui.activity.mykidsprofile.MyKidsProfileActivity"
            android:label="@string/title_activity_my_kids_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyKidsProfile" />

        <!-- Comments Activity -->
        <activity
            android:name=".ui.activity.comments.CommentsActivity"
            android:label="@string/title_activity_comments"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Comments" />

        <!-- Comment Detail Activity -->
        <activity
            android:name=".ui.activity.commentdetail.CommentDetailActivity"
            android:label="@string/title_activity_comment_detail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CommentDetail" />

        <!-- My Kids Detail Activity -->
        <activity
            android:name=".ui.activity.mykidsdetail.MyKidsDetailActivity"
            android:label="@string/title_activity_my_kids_detail_activty"
            android:screenOrientation="portrait"/>
    </application>

</manifest>